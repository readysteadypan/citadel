!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }
    - viewport = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'
    %meta{ name: 'viewport', content: viewport }
    %meta{ content: 'Ready Steady Pan is an introductory 6v6 competitive format in Team Fortres 2, revolving around the use of food items and the frying pan.', 'property' => 'og:description' }
    %meta{ content: 'pan.tf', 'property' => 'og:site_name' }
    %meta{ content: 'en_US', 'property' => 'og:locale' }
    %meta{ content: 'Ready Steady Pan is an introductory 6v6 competitive format in Team Fortres 2, revolving around the use of food items and the frying pan.', 'name' => 'twitter:description' }
    %meta{ content: 'https://pan.tf', 'name' => 'twitter:url' }
    %meta{ content: 'Ready Steady Pan', 'name' => 'twitter:title' }
    %meta{ content: '/images/rspwall.png', 'name' => 'twitter:image' }
    / Global Site Tag (gtag.js) - Google Analytics
    %script{:async => "", :src => "https://www.googletagmanager.com/gtag/js?id=UA-96442741-1"}
    :javascript
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments)};
      gtag('js', new Date());
      gtag('config', 'UA-96442741-1');

    %title= (content_for :title) || 'Ready Steady Pan'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = content_for :head
    = csrf_meta_tags
  %body
    %header.hidden-xs.banner-citadel#banner
      .banner-container-citadel
        .banner-background-citadel
          = image_tag 'background2.png'
        .banner-logo-citadel
          = link_to pages_home_path do
            = image_tag 'logo.png'

    %nav.navbar.navbar-citadel.affix-top#navbar{ role: 'navigation',
                                                 data: { spy: 'affix',
                                                         'offset-top' => 106 } }
      .container
        .row
          - if user_signed_in?
            %ul.nav.navbar-header.navbar-right
              %li= render 'user_dropdown'
            %ul.nav.navbar-header.navbar-right
              %li= render 'notifications', notifications: @notifications
          - else
            %ul.nav.navbar-header.navbar-right
              %li= render 'user_signin'

          %button.navbar-toggle.collapsed.navbar-left{ type: 'button',
                                                       data: { toggle: 'collapse',
                                                               target: '#navbar-collapse' } }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          .visible-xs.pull-left.banner-logo-citadel
            = image_tag 'logo.png', height: '50px'

          .collapse.navbar-collapse.navbar-left#navbar-collapse
            %ul.nav.navbar-nav= render 'navbar'

    .container#content
      .row
        .col-md-9
          = render 'flashes'
          = yield
        .col-md-3
          = render 'sidebar'
